<Window x:Class="auto_click.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:auto_click"
        mc:Ignorable="d"
        Title="AutoClicker" Height="150" Width="156" ResizeMode="CanMinimize" Closing="Window_Closing" Icon="/icon.ico" Loaded="Window_Loaded">
    <Grid>
        <Menu VerticalAlignment="Top" Height="20">
            <MenuItem Header="Settings" Click="MenuItem_Click"></MenuItem>
        </Menu>
        <Button x:Name="button_Start" Content="Start (F6)" HorizontalAlignment="Center" Margin="0,37,0,0" VerticalAlignment="Top" Width="116" Height="30" Click="Start_Click"/>
        <Button x:Name="button_Stop" Content="Stop (Ctrl)" HorizontalAlignment="Center" Margin="0,72,0,0" VerticalAlignment="Top" Width="118" Height="30" Click="Stop_Click"/>
    </Grid>
</Window>
